/**
 * Definition for singly-linked list.
 * class ListNode {
 *     int val;
 *     ListNode next;
 *     ListNode(int x) {
 *         val = x;
 *         next = null;
 *     }
 * }
 */
public class Solution {
    
    //faster chasing slow, while fast ÔºÅ= slow keep chasing, if fast == null or fast.next == null. it reaches the end. return flase
    public boolean hasCycle(ListNode head) {
        if(head == null || head.next == null) return false;
        ListNode slow = head;
        ListNode fast = head.next;
        while(fast != slow){
            if(fast == null || fast.next == null)return false;
            else{
                fast = fast.next.next;
                slow = slow.next;
            }
        }
        return true;
    }
}
